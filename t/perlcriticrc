# Put perlcritic policies/exceptions here, for example:

[TestingAndDebugging::RequireUseStrict]
# Mojo::Base does this automatically.
severity = 4

[Modules::RequireFilenameMatchesPackage]
# To allow multiple classes in a file.
severity = 4

[Subroutines::ProhibitSubroutinePrototypes]
# To allow signatures.
severity = 1

[Subroutines::ProhibitExplicitReturnUndef]
# These are fine when returning undef in scalar context.
severity = 1
